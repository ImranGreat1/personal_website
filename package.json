{
    "name": "Portfolio_project",
    "version": "1.0.0",
    "description": "My portfolio website",
    "main": "app.js",
    "scripts": {
        "start": "nodemon server.js",
        "start:prod": "nodemon server.js NODE_ENV=production",
        "debug": "ndb server.js",

        "watch:js": "parcel watch ./public/js/index.js --out-dir ./public/js --out-file bundle.js",
        "watch:sass": "sass --watch sass/main.scss:public/css/style.css",
        "devServer": "live-server",
        "start:sass": "npm-run-all --parallel watch:sass devServer",
        
        "compile:sass": "node-sass sass/main.scss css/style.comp.css",
        "prefix:css": "postcss autoprefixer --use 'last 10 versions' css/style.comp.css -o css/style.prefix.css",
        "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
        "build:css": "npm-run-all compile:sass prefix:css compress:css"
    },
    "author": "Imran Suleiman",
    "license": "ISC",
    "dependencies": {
        "axios": "^0.21.1",
        "bcrypt": "^5.0.0",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.19.0",
        "cookie": "^0.4.1",
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-mongo-sanitize": "^2.0.2",
        "express-rate-limit": "^5.2.3",
        "helmet": "^4.4.1",
        "hpp": "^0.2.3",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^5.11.11",
        "morgan": "^1.10.0",
        "nodemailer": "^6.4.17",
        "pug": "^3.0.0",
        "slugify": "^1.4.6",
        "validator": "^13.5.2",
        "xss-clean": "^0.1.1"
    },
    "devDependencies": {
        "npm-run-all": "^4.1.5"
    }
}
